{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
       "dom", "es2017"
    ],
    "typeRoots": [
      "types",
      "../../node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}