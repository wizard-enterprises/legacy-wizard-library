{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "examples"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2018", "dom"
    ],
    "typeRoots": [
      "types",
      "../../node_modules/@types",
      "../../../node_modules/@types"
    ],
    "declaration": true,
    "importHelpers": true,
    // "declarationDir": "lib",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}