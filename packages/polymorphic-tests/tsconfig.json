{
  "include": [
    "src/*.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017", "es6", "es2015", "dom"
    ],
    "typeRoots": [
      "types"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "experimentalDecorators": true
  }
}