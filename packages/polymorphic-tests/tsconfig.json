{
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017", "es6", "es2015", "dom"
    ],
    "typeRoots": [
      "types"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true
  }
}